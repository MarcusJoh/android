<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.idnert.ekonomiappen.AddExpences">

    <FrameLayout

        android:id="@+id/add_expences"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lägg in kostnader!"
            android:id="@+id/tvRubKostnader"
            android:layout_gravity="top|center"
            android:typeface="normal"
            android:textSize="20sp"
            android:textColor="#FF00FF"
            android:textStyle="normal"
            android:textAlignment="center"
            android:layout_marginTop="20sp" />

        <FrameLayout

            android:id="@+id/details_add_Expences"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"

            android:layout_gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:id="@+id/formAddExpences">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAddExpencesInfo"
                    android:textSize="12sp"
                    android:layout_gravity="left"
                    android:layout_marginTop="100sp"
                    android:gravity="left|center_vertical"
                    android:text="@string/inPutExpencens"
                    android:layout_marginLeft="50dp" />



                <EditText
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/inputItem"
                    android:text=""
                    android:textSize="12sp"
                    android:layout_gravity="left"
                    android:gravity="left|center_vertical"
                    android:inputType="text"
                    android:layout_marginLeft="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/income"
                    android:id="@+id/tvPrice"
                    android:textSize="12sp"
                    android:layout_gravity="left"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="50dp" />


                <EditText
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/inputPrice"
                    android:ems="10"
                    android:textSize="12sp"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:layout_marginLeft="50dp" />


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="År månad dag:"
                    android:id="@+id/tvDate"
                    android:textSize="12sp"
                    android:layout_gravity="left"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="50dp" />

                <EditText
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/inputDate"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori:"
                    android:id="@+id/tvCategory"
                    android:textSize="12sp"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="50dp" />

                <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edCategory"
                        android:layout_gravity="center_horizontal|top" />

                    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spar"
        android:id="@+id/btnSave"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:nestedScrollingEnabled="false" />

                </FrameLayout>


            </LinearLayout>
        </FrameLayout>


    </FrameLayout>


